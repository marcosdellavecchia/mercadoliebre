<div class="header-top">
    <a class="logo" href="/"
        ><img src="/images/logo-mercado-liebre.svg" alt="Logo Mercado Liebre"
    /></a>
    <form class="search" action="/search" method="GET">
        <input
            type="search"
            name="busqueda"
            placeholder="Buscar productos, marcas y más"
        />
        <i class="fas fa-search"></i>
    </form>
</div>
<p>
    <i class="fas fa-hand-holding-usd"></i> Comprá en cuotas y sin tarjeta de
    crédito!
</p>
<div class="menu-btn">
    <i class="fas fa-bars"></i>
</div>
<nav>
    <ul>
        <li><a href="#">Ofertas</a></li>
        <li><a href="#">Tiendas Oficiales</a></li>
        <li><a href="/products/create">Vender</a></li>
        <li><a href="#">Ayuda</a></li>
    </ul>
    <ul>
        <li>
            <% if (!user) { %>

            <a href="/auth/register"
                ><i class="far fa-id-card"></i> Creá tu cuenta</a
            >
        </li>
        <li>
            <a href="/auth/login"><i class="fas fa-sign-in-alt"></i> Ingresá</a>
        </li>

        <% } else { %>
        <li class="welcome-message">
            <i class="fas fa-user"></i> ¡Bienvenido, <%= user ? user.name :
            "invitado" %>!
        </li>
        <li>
            <a href="#"><i class="fas fa-shopping-bag"></i> Mis compras</a>
        </li>
        <% } %>
    </ul>
</nav>
